<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="whatsapp_wizard_form_view" model="ir.ui.view">
        <field name="name">whatsapp.wizard.form</field>
        <field name="model">whatsapp.wizard</field>
        <field name="arch" type="xml">
            <form string="Enviar por WhatsApp">
                <sheet>
                    <group>
                        <field name="phone"/>
                        <field name="message"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Enviar" name="action_send_whatsapp" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>